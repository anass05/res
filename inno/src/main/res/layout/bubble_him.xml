<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:layout_marginTop="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginRight="10dp"
        android:src="@drawable/user1" />


    <TextView
        android:id="@+id/message_from_him"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="272dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_rectangle_him"
        android:padding="8dp"
        android:text="hi man, how are you?hi manhi man, how are you?hi manhi man, how are you?hi manhi man, how are you?hi man"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/text_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginLeft="6dp"
        android:gravity="bottom"
        android:layout_gravity="bottom"/>

</LinearLayout>